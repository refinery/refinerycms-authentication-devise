<div id="search-header">
  <%= render 'refinery/admin/search_header', :url => refinery.authentication_devise_admin_users_path %>
</div>
<div id="users-index" class="infinite-scrolling-container">
  <% if @users.any? %>
    <ul id='users' class='list-unstyled sortable_list'>
      <%= render 'users' %>
    </ul>
  <% else %>
    <p class="sortable_list">
      <%= t('no_results', :scope => 'refinery.admin.search') %>
    </p>
  <% end %>
</div>
