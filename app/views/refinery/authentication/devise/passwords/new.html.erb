<p>
  <%= t('enter_email_address', :scope => 'refinery.authentication.devise.users.forgot') %>
</p>

<%= form_for resource, :as => resource_name,
                       :url => refinery.authentication_devise_user_password_path,
                       :html => { :method => :post } do |f| %>

  <div class='form-group'>
    <div class='validate'>
      <span></span>
    </div>
    <%= f.text_field :email, :class => "form-control",
                     :placeholder => t('email_address', :scope => 'refinery.authentication.devise.users.forgot'), 'data-validate'=> 'required,email' -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :submit_button_text => t('reset_password', :scope => 'refinery.authentication.devise.users.forgot'),
             :cancel_url => refinery.authentication_devise_user_session_path,
             :cancel_title => nil -%>
<% end -%>
